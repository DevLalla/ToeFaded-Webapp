{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"target": "es5",
		"module": "commonjs",
		"outDir": "build",
		"rootDir": ".",
		"jsx": "react-native",
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"preserveConstEnums": true,
		"allowJs": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true
	},
	"exclude": ["build", "node_modules", "babel.config.cjs", ".eslintrc.json", ".prettirerrc.json"],
	"files": ["src/**/*.ts", "src/**/*.tsx", "node_modules/typescript/lib/lib.es6.d.ts"]
}
